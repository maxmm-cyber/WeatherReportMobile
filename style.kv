<WScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "40"
        MDTopAppBar:
            title: "WeatherReport"
            left_action_items: [["menu", lambda x: app.callback()]]
        MDBoxLayout: 
            spacing: "30"  
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Місто"
                mode: "fill" 
                color: "orange"
               
            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "weather-partly-lightning"
                icon_size: "32sp"
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "cyan"

        MDBoxLayout:
            
                
            orientation: "vertical"
            pos_hint: {'center_x': 0.5,"center_y": 0.5}
            size_hint: 0.9, 0.9
            padding: dp(20)
            AsyncImage:
                id: icon 
                size: ("1500sp", "1500sp")
                fit_mode: 'contain'
                source: 'https://openweathermap.org/img/wn/10d@2x.png'
                pos_hint: {'center_x': 0.5,"center_y": 0.5}
                
            MDLabel:
                id: descr
                text: "Погода:"
                color: "cyan"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
                font_style: "H4"
                haligh: "center"
            MDLabel:
                id: temp
                text: "Температура:"
                color: "cyan"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
                font_style: "H4"
                haligh: "center"
                vertical: "middle"
            MDLabel:
                id: feel
                text: "Відчувається як:"
                color: "cyan"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
                font_style: "H6"
                haligh: "center"
                
                vertical: "middle"
            MDLabel:
                id: humidity
                text: "Вологість:"
                color: "cyan"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
                font_style: "H6"
                haligh: "center"
                vertical: "middle"
            MDLabel:
                id: wind
                text: "Вітер:"
                color: "cyan"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
                font_style: "H6"
                haligh: "center"
                vertical: "middle"
            Widget:
                size_hint_y:None
                height: "50sp"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
        
            MDFillRoundFlatButton:
                text: "Прогноз погоди"
                pos_hint: {'center_x': 0.4,"center_y": 0.5}
                on_press: root.show_forecast()
            
            Widget:
                size_hint_y:None
                height: "50sp"
                pos_hint:{'center_x': 0.8,"center_y": 0.5}
        
                    
<FScreen>:   
    MDBoxLayout:
        orientation:"vertical"  
        spacing: "20sp"
        MDTopAppBar:     
            title:"Прогноз погоди"
            left_action_items: [["arrow-left", lambda x: root.back()]]   
    ScrollViev:
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.4     


<WScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "40"
        MDTopAppBar:
            title: "WeatherReport"
            left_action_items: [["menu", lambda x: app.callback()]]
        MDBoxLayout: 
            spacing: "30"  
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Місто"
                mode: "fill" 
                color: "cyan"
               
            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "weather-partly-lightning"
                icon_size: "32sp"
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "orange"

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.4
            MDLabel:
                id: descr
                text: "Ясно:"
                color: "orange"

                font_style: "H4"
                haligh: "center"
            MDLabel:
                id: temp
                text: "14 градусів"
                color: "orange"
    
                font_style: "H4"
                haligh: "center"
            

